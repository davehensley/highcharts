env:
    browser: true

globals:
    $: true
    ADBE: true
    GOOGL: true
    Highcharts: true
    HighchartsAdapter: true
    hs: true                    # Highslide
    jQuery: true
    moment: true                # moment.js, used in gettimezoneoffset demo
    MSFT: true
    ohlcdata: true
    QUnit: true
    temperatures: true          # pointinterval-pointstart demo
    usdeur: true

rules:
    comma-dangle: 0             # TODO: Fix manually
    comma-spacing: 0            # TODO: Fix manually
    eol-last: 0
    func-style: 0               # TODO: Fix manually
    indent: 0                   # TODO: Isolate and auto fix. Set to [2, 4].
    key-spacing: 0              # TODO: Fix manually
    new-cap: 0                  # The ill-named Color object. Fix in HC5
    no-alert: 0
    no-console: 0               # TODO: Fix manually. Output to a visible div instead.
    no-loop-func: 0             # TODO: Fix manually
    no-multi-spaces: 0          # Consider key-spacing and exception to align arrays
    no-redeclare: 0             # TODO: Fix manually
    no-undefined: 0
    no-underscore-dangle: 0     # Maps demos use underscore. TODO: Check out.
    no-unused-vars: 0           # TODO: Fix manually
    no-shadow: 0                # TODO: Fix manually
    object-curly-spacing: [2, "always"]
    operator-linebreak: 0       # TODO: Fix manually
    quotes: 0                   # TODO: Consider single, but maybe not where we use JSON data
    radix: 0                    # TODO: Fix manually
    require-jsdoc: 0
    spaced-comment: 0
    space-before-function-paren: [2, {"anonymous": "always", "named": "never"}] # JSLint style
    strict: 0
    valid-jsdoc: 0
